{
  "$schema": "http://json.schemastore.org/template",
  "author": "nicoco007",
  "classifications": ["Games"],
  "name": "Beat Saber Mod",
  "description": "Beat Saber mod template",
  "shortName": "bsmod",
  "defaultName": "BeatSaberMod",
  "identity": "nicoco007.BeatSaberMod.CSharp",
  "tags": {
    "language": "C#",
    "type": "solution"
  },
  "symbols": {
    "framework": {
      "type": "parameter",
      "description": "The target framework for the project.",
      "datatype": "choice",
      "choices": [
        {
            "choice": "net472",
            "description": ".NET Framework 4.7.2"
        },
        {
            "choice": "netstandard2.0",
            "description": ".NET Standard 2.0"
        }
      ],
      "replaces": "net472",
      "defaultValue": "net472"
    }
  },
  "sourceName": "BeatSaberMod",
  "preferNameDirectory": true,
  "primaryOutputs": [
    {
      "path": "BeatSaberMod.sln"
    }
  ],
  "sources": [
    {
      "modifiers": [
        {
          "include": [
            "**/*.csproj.user"
          ],
          "exclude": [
            ".git/**",
            "install.ps1",
            "README.md"
          ],
          "copyOnly": [
            "BeatSaberMod/BeatSaberMod.csproj"
          ]
        }
      ]
    }
  ]
}
